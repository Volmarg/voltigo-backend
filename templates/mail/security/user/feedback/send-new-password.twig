{#
    This template is sent to which confirms the password reset via earlier link.
    So here (in this E-Mail) the new password is included
#}

{% extends '/mail/base.twig' %}

{% block contentLineOne %}

    {% set topText %}

        {% include '/mail/base-components/sub-components/header.twig' with {
            text: "New password"
        } %}

        {% set base64SecurityImage %}
            {% include 'mail/base64-images/security.twig' %}
        {% endset %}

        {% include '/mail/base-components/sub-components/responsive-image.twig' with {
            imageSource: base64SecurityImage
        } %}

        <p style="
            {% include 'mail/base-components/inline-style/text-font-size.twig' %}
        ">
            Hello
            <b style="
                {% include 'mail/base-components/inline-style/text-font-size.twig' %}
            ">
                {{ user.getUsername() }}
            </b>,
        </p>

        <p style="
            {% include 'mail/base-components/inline-style/text-font-size.twig' %}
        ">
            This is Your new password:
            <b style="
                {% include 'mail/base-components/inline-style/text-font-size.twig' %}
            ">
                {{ planPassword }}
            </b>.
            Please change it once You log-in!
        </p>

        {% include '/mail/base-components/footer-text.twig' %}
    {% endset %}

    {% include '/mail/base-components/sub-components/text.twig' with { textContent: topText } %}

{% endblock %}